<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Users</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="min-h-screen bg-zinc-900 flex flex-col items-center justify-between p-6">

  <div class="w-full max-w-5xl space-y-6">
    <!-- Page Heading -->
    <h1 class="text-3xl font-bold text-green-500 text-center">Registered Users</h1>

    <!-- Users Grid -->
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">

      <% data.forEach((user) =>{ %>
      <!-- User Card -->
      <div
        class="bg-zinc-800 p-5 rounded-xl shadow-md border border-zinc-700 hover:shadow-lg transition flex flex-col justify-between">
        
        <div>
          <h2 class="text-xl font-semibold text-white mb-2"><%= user.firstName %> <%= user.lastName %></h2>
          <p class="text-zinc-300 text-sm mb-1"><span class="font-medium text-green-500">Email:</span> <%= user.email %></p>
          <p class="text-zinc-300 text-sm mb-1"><span class="font-medium text-green-500">Address:</span> <%= user.address %></p>
          <p class="text-zinc-300 text-sm"><span class="font-medium text-green-500">Pin Code:</span> <%= user.pinCode %></p>
        </div>

        <!-- Buttons -->
        <div class="mt-4 flex gap-3">
          <!-- Edit Button -->
          <a href="/edit/<%= user.id %>"
             class="flex-1 text-center bg-green-600 hover:bg-green-500 text-white font-bold text-sm px-4 py-2 rounded-lg shadow-md transition">
            Edit
          </a>

          <!-- Delete Button -->
          <a href="/delete/<%= user.id %>"
             class="flex-1 text-center bg-red-600 hover:bg-red-500 text-white font-bold text-sm px-4 py-2 rounded-lg shadow-md transition">
            Delete
          </a>
        </div>
      </div>
      <% }) %>

    </div>
  </div>

  <!-- Home Button at Bottom -->
  <div class="w-full max-w-5xl mt-6">
    <a href="/"
       class="block w-full text-center bg-green-600 hover:bg-green-500 text-white font-bold text-lg px-6 py-3 rounded-lg shadow-md transition">
      ‚Üê Back to Home
    </a>
  </div>

</body>

</html>

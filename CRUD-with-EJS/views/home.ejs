<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Registration</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

  <style>
    /* Remove white background on Chrome autofill */
    input:-webkit-autofill,
    textarea:-webkit-autofill {
      box-shadow: 0 0 0px 1000px #3f3f46 inset !important; /* bg-zinc-700 */
      -webkit-text-fill-color: #fff !important; /* white text */
      caret-color: #fff !important;
      transition: background-color 9999s ease-in-out 0s;
    }
  </style>
</head>

<body class="min-h-screen bg-zinc-900 flex items-center justify-center p-6">
  <div class="w-full max-w-2xl space-y-6">

    <!-- Registration Form -->
    <div class="bg-zinc-800 p-6 rounded-2xl shadow-lg border border-zinc-700">
      <h1 class="text-2xl font-bold text-green-500 mb-4">User Registration</h1>
      <form action="/register" method="post" class="flex flex-col gap-4 text-white">
        
        <!-- First Name -->
        <div>
          <label for="firstName" class="block text-zinc-300 mb-1">First Name</label>
          <input type="text" id="firstName" name="firstName" placeholder="Enter first name"
            class="w-full px-4 py-2 rounded-lg bg-zinc-700 border border-zinc-600 text-white placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-green-500" >
        </div>

        <!-- Last Name -->
        <div>
          <label for="lastName" class="block text-zinc-300 mb-1">Last Name</label>
          <input type="text" id="lastName" name="lastName" placeholder="Enter last name"
            class="w-full px-4 py-2 rounded-lg bg-zinc-700 border border-zinc-600 text-white placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-green-500" >
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-zinc-300 mb-1">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter your email"
            class="w-full px-4 py-2 rounded-lg bg-zinc-700 border border-zinc-600 text-white placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-green-500" >
        </div>

        <!-- Address -->
        <div>
          <label for="address" class="block text-zinc-300 mb-1">Address</label>
          <textarea id="address" name="address" rows="3" placeholder="Enter your address"
            class="w-full px-4 py-2 rounded-lg bg-zinc-700 border border-zinc-600 text-white placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-green-500 resize-none" ></textarea>
        </div>

        <!-- Pin Code -->
        <div>
          <label for="pincode" class="block text-zinc-300 mb-1">Pin Code</label>
          <input type="text" id="pincode" name="pincode" placeholder="Enter pin code"
            class="w-full px-4 py-2 rounded-lg bg-zinc-700 border border-zinc-600 text-white placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-green-500" >
        </div>

        <!-- Submit -->
        <button type="submit"
          class="bg-green-600 hover:bg-green-500 transition-colors w-full py-2 rounded-lg cursor-pointer font-medium shadow-md">
          Register
        </button>
      </form>
    </div>

  </div>
</body>

</html>
